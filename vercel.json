{
  "rewrites": [
    { "source": "/login", "destination": "/login.html" },
    { "source": "/cerca", "destination": "/index.html" },
    { "source": "/bot", "destination": "/bot.html" },
    { "source": "/", "destination": "/cerca" }
  ],
  "crons": [
    {
      "path": "/api/cron",
      "schedule": "0 8 * * *"
    }
  ],
  "functions": {
    "api/**/*.js": {
      "maxDuration": 60
    }
  }
}
