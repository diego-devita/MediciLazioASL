{
  "rewrites": [
    { "source": "/login", "destination": "/login.html" },
    { "source": "/cerca", "destination": "/api/page?name=index" },
    { "source": "/bot", "destination": "/api/page?name=bot" },
    { "source": "/swagger", "destination": "/swagger.html" },
    { "source": "/admin", "destination": "/api/page?name=admin" },
    { "source": "/", "destination": "/api/page?name=index" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Robots-Tag",
          "value": "noindex, nofollow"
        }
      ]
    }
  ],
  "functions": {
    "api/**/*.js": {
      "maxDuration": 60
    }
  }
}
